<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/row1"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Listen to your favourite album"
        android:textColor="#ffdae3"
        android:textSize="32sp" />

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:gravity="center"
            android:text="@string/activity_type"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_typeact"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:text="Music"
            android:textColor="#f32"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/row1">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:gravity="center"
            android:text="@string/price"
            android:textColor="#fff"
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/ratingBar1"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:isIndicator="true"
            android:max="5"
            android:rating="0.40"
            android:stepSize="0.01" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/row2">

        <TextView
            android:id="@+id/tv_accessibility"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:gravity="center"
            android:text="@string/accessibility"
            android:textColor="#fff"
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/ratingBar2"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:isIndicator="true"
            android:max="5"
            android:rating="1"
            android:stepSize="0.01" />

    </LinearLayout>

    <TextView
        android:id="@+id/bt_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row3"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/refresh"
        android:textColor="#000"
        android:textSize="20sp" />
</RelativeLayout>